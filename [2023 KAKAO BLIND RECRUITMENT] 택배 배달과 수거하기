#include <string>
#include <vector>

using namespace std;

long long solution(int cap, int n, vector<int> deliveries, vector<int> pickups) {
    // cap : 트럭에 태울수 있는 최대 개수
    // n : 배달할 집의 개수 
    // 맨 뒤 집부터 방문
        
    long long answer = 0;
    
    long long a = 0; // 배달해야하는 택배 수
    long long b = 0; // 수거해야하는 택배 수
    
    for(int i = n-1; i >= 0; i--) {
        a -= deliveries[i]; // 맨 끝부터 배달해야되는 택배수 측정
        b -= pickups[i]; // 수거해야하는 택배 개수 세기
        int cnt = 0; // 이동횟수 cnt
        while(a < 0 || b < 0) {
            a += cap; // 배달해야되는 만큼 빼고 태울수 있는 만큼 더해서 남은 자리 구함
            b += cap; // 수거해야되는 만큼 빼고 태울수 있는 만큼 더해서 남은 자리 구함
            cnt++;
        }
        answer += (i + 1) * 2 * cnt; // 왕복 * 이동 횟수
    }
    
    return answer;
}
