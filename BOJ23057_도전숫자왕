#include <bits/stdc++.h>
using namespace std;

int n;
int card[21];

// set container : unique elements
// https://blockdmask.tistory.com/79
set<int> cardset;

void dfs(int idx, int sum) {
  cardset.insert(sum);

  if(idx == n) return;

  dfs(idx+1, sum+card[idx]);
  dfs(idx+1, sum);
}

int main() {
  ios::sync_with_stdio(false);
  cin.tie(0); cout.tie(0);

  int total=0;
  cin >> n;

  for(int i =0; i< n; i++){
    cin >> card[i];
    total += card[i];
  }

  dfs(0,0);
  
  cout << total - cardset.size() +1;
  
}

